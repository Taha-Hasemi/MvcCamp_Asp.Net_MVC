@using EntityLayer.Concrete
@model List<Skill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yetenekler</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Ad
                        </th>
                        <th>
                            Detaylar
                        </th>
                        <th>
                            Sil
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.SkillID
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/SkillsProfile/SkillDetails/@item.SkillID">Detaylar</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href="/SkillsProfile/DeleteSkill/@item.SkillID">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="/SkillsProfile/AddSkill/" class="btn btn-info">Yeni Yetenek Karti Ekle</a>

</section>
<!-- /.content-wrapper -->
