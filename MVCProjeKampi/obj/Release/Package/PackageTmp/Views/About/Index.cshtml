@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda</th>
        <th>Aktif-Pasif yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1</td>
            <td>
                @if (item.AboutState)
                {
                    <a href="/About/Passive/@item.AboutID" class="btn btn-danger">Pasif Yap</a>

                }
                else
                {
                    <a href="/About/Active/@item.AboutID" class="btn btn-success">Aktif Yap</a>
                }
            </td>
        </tr>
    }
</table>

@Html.Action("AboutPartial", "About")