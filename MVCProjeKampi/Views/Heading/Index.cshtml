@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string statusColor = "";}
@{ string headingStatus = "";}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Projects</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Başlıklar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Başlık Adı
                        </th>
                        <th style="width: 15%">
                            Oluşturan Yazar
                        </th>
                        <th style="width: 10%">
                            Durum
                        </th>
                        <th style="width: 8%" class="text-center">
                            Kategori
                        </th>
                        <th style="width: 30%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.Category.CategoryName == "Spor" || item.Category.CategoryName == "Dizi")
                        {
                            color = "badge badge-success";
                        }
                        else if (item.Category.CategoryName == "Tiyatro" || item.Category.CategoryName == "Kitap")
                        {
                            color = "badge badge-warning";
                        }
                        else if (item.Category.CategoryName == "Yazılım" || item.Category.CategoryName == "Film")
                        {
                            color = "badge badge-info";
                        }
                        else if (item.Category.CategoryName == "Seyahat" || item.Category.CategoryName == "Eğitim")
                        {
                            color = "badge badge-secondary";
                        }
                        else
                        {
                            color = "badge badge-danger";

                        }


                        if (item.HeadingStatus)
                        {
                            headingStatus = "Aktif";
                            statusColor = "badge badge-success";
                        }
                        else
                        {
                            headingStatus = "Pasif";
                            statusColor = "badge badge-danger";
                        }


                        <tr>
                            <td>
                                @item.HeadingID
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <span class="@statusColor">@headingStatus</span>
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state">
                                <span class="@color">@item.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                    <i class="fas fa-folder">
                                    </i>
                                    Yazılar
                                </a>
                                <a class="btn btn-info btn-sm" href="/Heading/UpdateHeading/@item.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                @if (!item.HeadingStatus)
                                {
                                    <a class="btn btn-success btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Aktif Yap
                                    </a>
                                }
                                @if (item.HeadingStatus)
                                {
                                    <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Pasif Yap
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="/Heading/AddHeading/" class="btn btn-info">Yeni Başlık Ekle</a>

</section>
<!-- /.content-wrapper -->
<!-- Control Sidebar -->
<!-- /.control-sidebar -->
