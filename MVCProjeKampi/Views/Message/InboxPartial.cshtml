<div class="mailbox-read-info">
    <h5>@Model.Subject</h5>
    <br />
    <h6>
        Gönderici Adı: @Model.Writer.WriterName @Model.Writer.WriterSurName
        <br />
        Mail: @Model.Writer.WriterMail
        <span class="mailbox-read-time float-right">@(((DateTime)Model.MessageDate).ToString("dd-MMM-yyyy mm-HH"))</span>
    </h6>
</div>
<!-- /.mailbox-read-info -->
<!-- /.mailbox-controls -->
<div class="mailbox-read-message">
    <p>@Model.MessageContent</p>
    <img src="@Model.FileName" alt="Dosya" height="100" />
</div>
<!-- /.mailbox-read-message -->
